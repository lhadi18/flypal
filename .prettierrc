{
  "singleQuote": true,
  "printWidth": 120,
  "semi": false,
  "arrowParens": "avoid",
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "none",
  "overrides": [
    {
      "files": ["*.json", ".md", ".markdown"],
      "options": {
        "tabWidth": 2
      }
    }
  ],
  "plugins": ["prettier-plugin-sort-imports"],
  "sortImports": {
    "ignoreCase": false,
    "memberSort": {
      "grouped": true
    },
    "imports": ["react", "[path/to/your/project/imports]", "['./...', './@...', '../...']", "^[^.]"]
  }
}
